	<groupId>com.conztanz.servicemix</groupId>
	<artifactId>framework-connect-persistence</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>bundle</packaging>
	<!-- <description>Persisting incoming messages</description> -->
	
<!-- 	TODO : clean properties (there are some unused ones) -->
	<properties>

		<framework.version>0.2.1</framework.version>

		<bundle.vendor>Conztanz</bundle.vendor>
		<esbDeployableProject>false</esbDeployableProject>

		<!-- <maven.auto-clean.skip>true</maven.auto-clean.skip> -->

<!-- 		<bundle.namespace.root>com.conztanz.demo</bundle.namespace.root> -->
		<depends-maven-plugin.version>1.3</depends-maven-plugin.version>
		<maven-dependency-plugin.version>2.10</maven-dependency-plugin.version>
		<maven-resources-plugin.version>2.6</maven-resources-plugin.version>
		<cxf.version>3.1.4</cxf.version>
		<cxf.codegen-plugin.version>${cxf.version}</cxf.codegen-plugin.version>

		<commonslogging.version>1.2</commonslogging.version>
		<xerces.version>2.11.0</xerces.version>
		<camel.version>2.16.1</camel.version>
				<camel.version>2.16.1</camel.version>
		
		<activemq-camel.version>5.6.0</activemq-camel.version>
		<xbean-spring.version>3.18</xbean-spring.version>
		<!-- <features-maven-plugin.version>2.2.8</features-maven-plugin.version> -->
		<features-maven-plugin.version>2.3.0</features-maven-plugin.version>

		<smooks.version>1.5</smooks.version>

		<slf4j.version>1.7.12</slf4j.version>

		<activemq.broker.url>activemq-cz-test.conztanz.com:61616</activemq.broker.url>
		<jms.concurrent.consumers>10</jms.concurrent.consumers>
	</properties>

	<build>
		<plugins>
			<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-dependency-plugin</artifactId>
					<version>${maven-dependency-plugin.version}</version>
				</plugin>
            <plugin>
                <!--generate blueprint from annotations -->
                <groupId>org.apache.aries.blueprint</groupId>
                <artifactId>blueprint-maven-plugin</artifactId>
                <version>1.5.0</version>
                <configuration>
                    <scanPaths>
                        <scanPath>com.conztanz</scanPath>
                    </scanPaths>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>add-resource-dir</goal>
                            <goal>blueprint-generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
                <!--generate a bundle ( as opposed to a JAR)  -->
				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-bundle-plugin</artifactId>
					<version>${felix.plugin.bundle.version}</version>
					<extensions>true</extensions>
				</plugin>
			<!--  generate import and export statements, based on static analysis of code but also statements mentioned here   -->
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Description>${project.description}</Bundle-Description>

						<Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
						<Meta-Persistence>META-INF/persistence-conztanz-primary.xml</Meta-Persistence>

						<Export-Package>
						com.conztanz.persistence.services,
						com.conztanz.persistence.model</Export-Package>
						<!-- <Private-Package></Private-Package> -->
						<Import-Package>
							org.apache.felix.service.command;version="[0.6,1)",
							org.apache.felix.gogo.commands;version="[0.6,1)",
							org.apache.karaf.shell.console;version="[2.2,4.1)",
							org.hibernate.proxy,
							javassist.util.proxy,
							javax.persistence,
							*
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>

		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.aries.blueprint
										</groupId>
										<artifactId>
											blueprint-maven-plugin
										</artifactId>
										<versionRange>
											[1.5.0,)
										</versionRange>
										<goals>
											<goal>
												add-resource-dir
											</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>




	<dependencies>


		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-core</artifactId>
			<version>${camel.version}</version>
		</dependency>

		<dependency>
			<groupId>org.apache.servicemix.specs</groupId>
			<artifactId>org.apache.servicemix.specs.jsr339-api-2.0</artifactId>
			<version>2.5.0</version>
		</dependency>
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-entitymanager</artifactId>
		</dependency>
		
 		<!--Contexts and Dependency Injection for OSGi -->
		<dependency>
			<groupId>org.ops4j.pax.cdi</groupId>
			<artifactId>pax-cdi-api</artifactId>
			<version>0.12.0</version>
		</dependency>
		<dependency>
			<groupId>javax.inject</groupId>
			<artifactId>javax.inject</artifactId>
			<version>1</version>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>javax.transaction</groupId>
			<artifactId>javax.transaction-api</artifactId>
			<version>1.2</version>
		</dependency>
		
		<dependency>
			<groupId>com.conztanz</groupId>
			<artifactId>framework-connect-persistence-test</artifactId>
<!-- 			TODO: move version to parent -->
			<version>0.4-SNAPSHOT</version>
		</dependency>
	</dependencies>
</project>